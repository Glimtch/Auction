@using Auction.WEB.Models;
@model IEnumerable<DetailedLotViewModel>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @{
                    if (item.Image != null)
                    {
                        <img src="data:image/png;base64,@Convert.ToBase64String(item.Image, 0, item.Image.Length)" style="max-height:90px; max-width:160px" />
                    }
                    else
                    {
                        <img src="@Url.Content("~/Content/no_image.png")" style="max-height:90px; max-width:160px" />
                    }
                }
            </td>
            <td>
                <h4>@Html.DisplayFor(model => item.Name)</h4>
                <p>
                    <h5>Sold for:</h5>
                    <h5>$@Html.DisplayFor(model => item.CurrentPrice)</h5>
                </p>
                @Html.ActionLink("View more", "Details", "Auction", new { id = item.Id }, null)
            </td>
        </tr>
    }
